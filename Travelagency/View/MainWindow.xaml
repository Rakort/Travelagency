<Window x:Class="Travelagency.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Travelagency"
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="750">
    <Grid>
        <StackPanel Orientation="Horizontal" Height="24" VerticalAlignment="Top">
            <Button Content="Заявки" Click="Button_Click" />
            <Button Content="Обращения" Click="Button_Click_2" />
            <Button Content="Туры" Click="Button_Click_1" />
        </StackPanel>
        <Border Name="Border" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Margin="0,24,0,0" />
    </Grid>
</Window>
